<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       
       default-autowire="byName">

	<context:component-scan base-package="net.awired.restmcu" />

	<jaxrs:server id="transport" address="/">
		<jaxrs:serviceBeans>
			<ref bean="pinResourceStub" />
			<ref bean="boardResourceStub" />
			<ref bean="rmcuDebugResourceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="ajslUpdateExceptionMapper" />
			<ref bean="ajslNotFoundExceptionMapper" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.JSONProvider" />
	<bean id="ajslNotFoundExceptionMapper" class="net.awired.ajsl.web.resource.mapper.AjslNotFoundExceptionMapper"/>
	<bean id="ajslUpdateExceptionMapper" class="net.awired.ajsl.web.resource.mapper.AjslUpdateExceptionMapper"/>

</beans>
