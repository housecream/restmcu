<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>restmcu-it</artifactId>
	<name>RestMcu - IT</name>

	<parent>
		<groupId>org.housecream.restmcu</groupId>
		<artifactId>restmcu</artifactId>
		<version>0.1-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<properties>
		<!-- <board.host>localhost</board.host> -->
		<board.host.comma>willbereplaced</board.host.comma>
		<board.port>8080</board.port>
		<board.path>/restmcu</board.path>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.housecream.restmcu</groupId>
			<artifactId>restmcu-api</artifactId>
		</dependency>

		<dependency>
			<groupId>fr.norad.jaxrs.client.server</groupId>
			<artifactId>jaxrs-client-server</artifactId>
			<version>0.5</version>
		</dependency>
		<dependency>
			<groupId>fr.norad.jaxrs.junit</groupId>
			<artifactId>jaxrs-junit</artifactId>
			<version>0.5-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.1</version>
		</dependency>

		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxrs</artifactId>
			<version>${cxf.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>spring-web</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<artifactId>spring-core</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http-jetty</artifactId>
			<version>${cxf.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>spring-web</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>com.fasterxml.jackson.jaxrs</groupId>
			<artifactId>jackson-jaxrs-json-provider</artifactId>
			<version>2.0.5</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
		</dependency>
	</dependencies>

	<build>
		<testSourceDirectory>src/it/java</testSourceDirectory>
		<testResources>
			<testResource>
				<filtering>false</filtering>
				<directory>src/it/resources</directory>
			</testResource>
		</testResources>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>wiring</directory>
			</resource>
		</resources>

		<plugins>

			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.11</version>
				<configuration>
					<excludes>
						<exclude>**/**IT.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- profiles -->
	<profiles>
		<profile>
			<id>board</id>
			<properties>
				<!-- <config.file>../it/src/main/java/org/housecream/restmcu/it/wiring/TestBoardConfig.cpp</config.file> -->
				<config.file>../it/target/classes/TestBoardConfig.cpp</config.file>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.groovy.maven</groupId>
						<artifactId>gmaven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<id>clean</id>
								<phase>pre-clean</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<source>project.properties['board.host.comma'] =
										(project.properties['board.host'] =~ /\./).replaceAll(',')</source>
								</configuration>
							</execution>
							<execution>
								<id>build</id>
								<phase>initialize</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<source>project.properties['board.host.comma'] =
										(project.properties['board.host'] =~ /\./).replaceAll(',')</source>
								</configuration>
							</execution>
						</executions>
					</plugin>



					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.11</version>
						<configuration>
							<systemProperties>
								<property>
									<name>board.host</name>
									<value>${board.host}</value>
								</property>
								<property>
									<name>board.port</name>
									<value>${board.port}</value>
								</property>
								<property>
									<name>board.path</name>
									<value>${board.path}</value>
								</property>
							</systemProperties>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>integration-test</goal>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<executions>
							<execution>
								<id>Make-all</id>
								<phase>compile</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>-C</argument>
										<argument>../program</argument>
										<argument>CONFIG=${config.file}</argument>
										<argument>all</argument>
									</arguments>
								</configuration>
							</execution>
							<execution>
								<id>Make-clean</id>
								<phase>clean</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>-C</argument>
										<argument>../program</argument>
										<argument>CONFIG=${config.file}</argument>
										<argument>clean</argument>
									</arguments>
								</configuration>
							</execution>
							<execution>
								<id>Make-upload</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>make</executable>
									<arguments>
										<argument>-C</argument>
										<argument>../program</argument>
										<argument>CONFIG=${config.file}</argument>
										<argument>upload</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.sonatype.plugins</groupId>
						<artifactId>wait-maven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<id>wait-board</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>wait</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<protocol>http</protocol>
							<host>${board.host}</host>
							<port>${board.port}</port>
							<file>${board.path}</file>
							<maxcount>10</maxcount>
							<timeout>1000</timeout>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>

